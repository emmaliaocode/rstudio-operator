apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{ name }}-rstudio-deployment
  labels:
    component: rstudio
    rstudio: {{ name }}
spec:
  selector:
    matchLabels:
      component: rstudio
      rstudio: {{ name }}
  template:
    metadata:
      labels:
        component: rstudio
        rstudio: {{ name }}
    spec:
      containers:
      - name: rstudio
        image: {{ spec.image }}
        imagePullPolicy: {{ spec.imagePullPolicy }}
        ports:
        - containerPort: 8787
        resources:
          requests:
            cpu: 10m
            memory: 1Gi
          limits:
            cpu: 100m
            memory: 1Gi
        env:
        - name: PASSWORD
          valueFrom:
            secretKeyRef:
              name: {{ name }}-rstudio-secret
              key: loginPassword
        - name: ROOT
          value: "{{ spec.isRoot | string | lower }}"
